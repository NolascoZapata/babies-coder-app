<form class="d-flex flex-column align-items-center mt-3" action="/api/auth/login" method="post">
  <h2 class="text-secondary">Login</h2>
  <input type="email" name="username" id="email" placeholder="Email" required>
  <input class="mt-3" type="password" name="password" id="password" placeholder="Password" required>
  <button type="submit" class="btn btn-secondary mt-2">Sign In</button>
  <button class="btn bg-transparent mt-2" ><a href="/register" class="text-decoration-none text-secondary ">Create account</a></button>
</form>
