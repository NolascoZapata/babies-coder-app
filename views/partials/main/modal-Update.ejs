<div class="modal fade" id="updateProductModal" tabindex="-1" aria-labelledby="updateProductModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update Product</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="d-flex flex-column align-items-center mt-3" id="updateProductForm" >
          <input type="text" id="update_ProdId" hidden>
          <label class="mt-3" for="update_ProdName">Product Name</label>
          <input type="text" name="name" id="update_ProdName" required>
          <label class="mt-3" for="update_ProdPrice">Product Price</label>
          <input class="mt-3" type="text" name="price" id="update_ProdPrice" required>
          <label class="mt-3" for="update_ProdStock">Stock</label>
          <input class="mt-3" type="text" name="stock" id="update_ProdStock" required>
          <label class="mt-3" for="update_ProdSize">Size</label>
          <select style="width: 27%;" name="size" id="update_ProdSize" class="form-control" required>
            <option value='0-3 months'>0-3 months</option>
            <option value='6-9 months'>6-9 months</option>
            <option value='9-12 months'>9-12 months</option>
          </select>
          <label class="mt-3" for="update_ProdCategory">Category</label>
          <select style="width: 27%;" name="category" id="update_ProdCategory" class="form-control" required>
            <option value='baby'>Baby</option>
            <option value='girl'>Girl</option>
            <option value='boy'>Boy</option>
          </select>
          <label class="mt-3" for="update_ProdImgUrl">Image Url</label>
          <input class="mt-3" type="text" name="imgDir" id="update_ProdImgUrl" required>
          <button class="btn btn-secondary mt-2">Update Product</button>
        </form>
      </div>
    </div>
  </div>
</div>